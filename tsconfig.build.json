{
  "compilerOptions": {
    "lib": [
        "es5",
        "es6"
    ],
    "target": "es6",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./bin/server",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "sourceMap": true
  },
  "include": ["src/server"],
  "exclude": ["node_modules"]
}
